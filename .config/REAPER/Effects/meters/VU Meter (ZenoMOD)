                sinp = sin(ph) * r1;
                x1 = xa - cosp ;
                y1 = ya - sinp ;
                x2 = xa - cosp * 1.1;
                y2 = ya - sinp * 1.1;
                gfx_x = x1;
                gfx_y = y1; 
