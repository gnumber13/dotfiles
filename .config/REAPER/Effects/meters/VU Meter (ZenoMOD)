//********************************************* bottom bar *******************************************
  
  xw2 = max(1,floor((gfx_w) / 2));
  yw2 = floor(xw / 1.025);
  
  
  gfx_ext_flags == 0 ? (  // show bottom bar only if meter is not embedded
      gsc >.6 ? (
      
          // bottom bar bg
          gfx_r=gfx_g=gfx_b= 0; gfx_a= bb_t ;
