      cosp = cos(ph);
      sinp = sin(ph);
        
      x1 = xa - cosp * r1 * 0.15;
      y1 = ya - sinp * r1 * 0.15;
      x2 = xa - cosp * r1 * 1.1;
      y2 = ya - sinp * r1 * 1.1;
    
    
    
    
